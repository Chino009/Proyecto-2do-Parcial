@page
@model TecNM.Proyecto.WebSite.Pages.OrderGame.ListModel

<div class="container-fluid">
    <form method="get">
        <div class="row">
            <div class="col-md-8"></div>
            <div class="col-md-4">
                <br/>
                <button id="btnSearch" class="btn btn-primary mr-3">Search</button>
                
            </div>
        </div>
    </form>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <table class="table">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Image</th>
                <th></th>
            </tr>
            @foreach (var game in @Model.Game)
            {
                <tr>
                    <td>@game.Name</td>
                    <td>@game.Description</td>
                    <td>@game.Image</td>
                    <td>
                        <a a-asp-area="" asp-page="/Game/Edit" asp-route-id="@game.Id"
                           class="btn btn-primary" role="button">Edit</a>
                        <a a-asp-area="" asp-page="/Game/Delete" asp-route-id="@game.Id"
                           class="btn btn-danger" role="button">Delete</a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="col-md-1"></div>
</div>
</div>